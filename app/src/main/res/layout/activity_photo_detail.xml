<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/photo_linearlayout_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/photo_textView_back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="back"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/photo_textView_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="asdf"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_weight="100"/>

        <TextView
            android:id="@+id/photo_textView_empty"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/photo_linearlayout_main"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <VideoView
            android:id="@+id/photo_videoView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</LinearLayout>