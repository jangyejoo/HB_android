<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/setting_textView_main"
        android:text="설정"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hb_dark"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/setting_textView_updateProfile"
        android:text="프로필 변경"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/xml_border2" />

    <TextView
        android:id="@+id/setting_textView_updatePassword"
        android:text="비밀번호 변경"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/xml_border2"/>

    <Switch
        android:id="@+id/setting_switch_Enter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/xml_border2"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Enter키로 메시지 전송"
        android:textColor="@color/places_autocomplete_prediction_secondary_text"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/setting_textView_logout"
        android:text="로그아웃"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/xml_border2"/>

    <TextView
        android:id="@+id/setting_textView_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="회원 탈퇴"
        android:textColor="@color/quantum_vanillared700"
        android:textSize="15dp"
        android:background="@drawable/xml_border2"/>

</LinearLayout>