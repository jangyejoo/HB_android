<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/xml_border"
    >

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/chatlistitem_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chatlistitem_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/chatlistitem_textview_lastMessage"
            android:layout_marginTop="5dp"
            android:layout_below="@id/chatlistitem_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/chatlistitem_textview_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/chatlistitem_textview_newmessage"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/chatlistitem_textview_timestamp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:background="@drawable/new_moon"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/autosize_text_sizes"
            android:gravity="center"
            android:visibility="gone"/>

    </RelativeLayout>



</LinearLayout>